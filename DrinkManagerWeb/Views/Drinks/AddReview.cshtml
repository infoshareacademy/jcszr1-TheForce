@model DrinkManagerWeb.Models.ViewModels.DrinkCreateViewModel

@{
    ViewBag.Title = $"Review of {Model.Name}";
    Layout = "_Layout";
}

<div class="row px-4">
    <div class="col-12">
        <h1>Review of {Model.Name}</h1>
        <hr />
        <form asp-antiforgery="true" asp-action="AddReview" asp-controller="Drinks" asp-route-id="@(Model)" method="post">
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="DrinkReview.ReviewText">Review</label>
                    <input type="text" class="form-control" asp-for="DrinkReview.ReviewText" placeholder="ReviewText">
                    <span asp-validation-for="DrinkReview.ReviewText" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="DrinkReview.ReviewScore">Drink score:</label>
                    <select class="form-control" asp-for="DrinkReview.ReviewScore">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
            <div class="mt-3 border-top">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>