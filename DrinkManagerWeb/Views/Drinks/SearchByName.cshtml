@model DrinkManagerWeb.Models.ViewModels.DrinksViewModel

@{
    ViewBag.Title = "Search by name";
    Layout = "_Layout";
}

<h2>Search by name</h2>
<div>
    <form asp-controller="Drinks" asp-action="SearchByName" method="get">
        <p>
            Enter a drink name to find <br />(Tip: you can provide a part of the name you are looking for):<br />
            <input type="text" name="SearchString" value="@ViewData["SearchString"]">
            <button type="submit" class="btn btn-outline-primary">Search</button>
            <a asp-controller="Drinks" asp-action="SearchByName" asp-route-searchString="" class="btn btn-outline-secondary" type="button">Clear</a>
            <br />
        </p>
    </form>
</div>

<partial name="Partials/DrinkList" model="Model" />
<partial name="Partials/Pagination" model="Model" />
<partial name="Partials/BackButton"/>