@using BLL
@model DrinkManagerWeb.Models.ViewModels.DrinksViewModel

@{
    ViewBag.Title = "Drinks";
    Layout = "_Layout";
}
<div class="row px-4">
    <div class="col-12">
        <header class="d-flex align-items-center">
            <h1>Search by Alcohol Content</h1>
        </header>
        <div>
            <form method="post">
                <div class="form-check">
                    @Html.CheckBoxFor(item => item.Alcoholics, new { @class = "form-check-input", @id = "alcoholicsCheck" })
                    <label class="form-check-label" for="alcoholicsCheck">Alcoholic Drinks</label>
                </div>
                <div class="form-check">
                    @Html.CheckBoxFor(item => item.NonAlcoholics, new { @class = "form-check-input", @id = "nonAlcoholicsCheck" })
                    <label class="form-check-label" for="nonAlcoholicsCheck">Non Alcoholic Drinks</label>
                </div>
                <div class="form-check">
                    @Html.CheckBoxFor(item => item.OptionalAlcoholics, new { @class = "form-check-input", @id = "optionalAlcoholicsCheck" })
                    <label class="form-check-label" for="optionalAlcoholicsCheck">Optional Alcohol Drinks</label>
                </div>
                @*<input name="Alcoholics" type="checkbox" value="true" /> Alcoholic Drinks<br />
        <input name="NonAlcoholics" type="checkbox" value="true" /> Non Alcoholic Drinks<br />
        <input name="OptionalAlcoholics" type="checkbox" value="true" /> Optional Alcohol Drinks<br />*@
                <button>Search</button>
            </form>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    <a asp-action="SearchByAlcoholContent" asp-route-lastAlcoholicInfo="@ViewData["lastAlcoholicInfo"]" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Name</a>
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var drink in Model.Drinks)
            {
                <tr>
                    <td>
                        <a asp-action="DrinkDetails" asp-route-id="@drink.Id">@drink.Name</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        @{
            var prevDisabled = !Model.Drinks.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.Drinks.HasNextPage ? "disabled" : "";
        }

        <nav>
            <ul class="pagination">
                <li class="page-item @prevDisabled">
                    <a asp-action="SearchByAlcoholContent"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.Drinks.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link">
                        Previous
                    </a>
                </li>
                @for (int i = 0; i < Model.Drinks.TotalPages; i++)
                {
                    <li class="page-item @Model.Drinks.IsOnCurrentPage(Model.Drinks.PageIndex, i + 1)">
                        <a asp-action="SearchByAlcoholContent"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(i + 1)"
                           class="page-link">
                            @(i + 1)
                        </a>
                    </li>
                }
                <li class="page-item @nextDisabled">
                    <a asp-action="SearchByAlcoholContent"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.Drinks.PageIndex + 1)"
                       class="page-link">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>