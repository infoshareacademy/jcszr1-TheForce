                <div class="card col-lg-8 col-md-4 col-sm-2">
                    <a class="card-title" asp-action="DrinkDetails" asp-route-id="@drink.Id"><img class="w-100 rounded shadow-lg mb-3" src="@drink.ImageUrl" /></a>
                    <div class="card-body">
