@model DrinkManagerWeb.Models.ViewModels.RoleViewModel
@{
    ViewBag.Title = "Administration - Roles";
    Layout = "_LayoutAdmin";
}
<h2>List of roles</h2>
<hr />
<a asp-action="CreateRole" class="btn btn-secondary">Create a Role</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
    @foreach (var role in Model.Roles)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>

                @foreach (var user in Model.UsersPerRole[@role.Name])
                {
                    <span>@user</span>
                }
            </td>
            <td><a class="btn btn-sm btn-primary" asp-action="UpdateRole" asp-route-id="@role.Id">Update</a></td>
            <td>
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>