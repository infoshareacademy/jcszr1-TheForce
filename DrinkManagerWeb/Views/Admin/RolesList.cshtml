@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Title = "Administration - Roles";
    Layout = "_LayoutAdmin";
}
<h2>List of roles</h2>
<hr />
<a asp-action="CreateRole" class="btn btn-secondary">Create a Role</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>Id</td>
            <td> </td>
            <td> </td>
            <td> </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.Id</td>
                <td i-role="@role.Id"></td>
                <td><a class="btn btn-sm btn-primary" asp-action="UpdateRole" asp-route-id="@role.Id">Update</a></td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>  