@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 px-4 pb-5">Welcome in Drink Manager App!</h1>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-5">
            <div class="text-left p-4 m-5" style="line-height: 1.75">
                <p>
                    With this app you can search drinks by their:
                    <ul>
                        <li>name,</li>
                        <li>ingredients,</li>
                        <li>alcohol content.</li>
                    </ul>
                    You can also add:
                    <ul>
                        <li>review to drinks,</li>
                        <li>ratings,</li>
                        <li>your drink.</li>
                    </ul>
                    When you find your beloved drink you can add it <br>to your list of favourite drinks!
                    <br><br>Enjoy!
                </p>
            </div>
        </div>
        <div class="col-6">
            <img class="img-thumbnail"
                 src="https://cdn.pixabay.com/photo/2018/08/22/10/15/bottles-3623317_960_720.jpg"
                 alt="Bottles with alcohol" />
        </div>
        <div class="col-1">
        </div>
    </div>
</div>