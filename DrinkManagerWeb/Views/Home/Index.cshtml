@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome in Drink Manager App!</h1>
    <div class="main-text">
        <p>With this app you can search drinks by their:
            <ul>
                <li>name,</li>
                <li>ingredients,</li>
                <li>alcohol content.</li>
            </ul>
            You can also add:
            <ul>
                <li>review to drinks,</li>
                <li>ratings,</li>
                <li>your drink.</li>
            </ul>
            When you find your beloved drink you can add it to your list of favourite drinks!
            <br/>Enjoy!
        </p>
    </div>
    <img class="main-image" src="https://cdn.pixabay.com/photo/2018/08/22/10/15/bottles-3623317_960_720.jpg" alt="Bottles with alcohol" />
</div>
